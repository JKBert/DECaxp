<?xml version="1.0" encoding="utf-8"?>

<!-- This is the first definition of a DECaxp emulated system -->
<DECaxp>

	<!-- The Owner field is for informational purposes only -->
	<Owner>
		<Name>
			<First>Jonathan</First>
			<MI>D.</MI>
			<Last>Belanger</Last>
			<Suffix />
		</Name>
		<CreationDate>02-Jan-2018</CreationDate>
		<ModifyDate>02-Jan-2018</ModifyDate>
	</Owner>

	<!-- This is where the real emulation definitions begin -->
	<System>
		<!-- This is the computer system information -->
		<Model>
			<Name>Compaq ES40</Name>
			<Model>ES40></Model>
		</Model>

		<!-- 
				This defines where various information is stored
				The InitFile is the file containing the code that initializes
					the CPUs, prior to loading the Console
				This PALImage is the file contains the executable image that is
					used to burn in the PALcode
				The ROMImage is the file that is burnt in from the PALImage
				The NVRamFile is the file that contains the last saved
					Non-Volitile RAM information
		-->
		<SROM>
			<InitFile>
				/cygwin/g/git/DECaxp/dat/CPU Initialization Load File.dat
			</InitFile>
			<PALImage>/cygwin/g/git/DECaxp/dat/filename.exe</PALImage>
			<ROMImage>/cygwin/g/git/DECaxp/dat/DECaxp 21264.rom</ROMImage>
			<NVRamFile>/cygwin/g/git/DECaxp/dat/DECaxp 21264.nvr</NVRamFile>
		</SROM>

		<!-- 
				This defines the actual CPUs.  They should be all the same with
					a unit number attribute value
				The number of CPUs that can be defined is determined by the
					System/Model information
				The Generation contains what version of the Digitial Alpha AXP
					CPU we are emulating
				The Pass contains the manufacturing pass for the generation of
					the CPU
				The Name is for informational purposes (e.g., for the Digital
					Alpha AXP 21064, the name would be Flamingo
		-->
		<CPUs>
			<CPU number="1">
				<Generation>21264</Generation>
				<Pass>1</Pass>
				<Name />
			</CPU>
		</CPUs>

		<!--
			This defines the individual memory modules and their size.  In
			reality the sizes are summed for total memory size.  The individual
			DIMMs are simulated.
		-->
		<DIMMs>
			<DIMM number="1">
				<Size>4.0GB</Size>
			</DIMM>
			<DIMM number="2">
				<Size>4.0GB</Size>
			</DIMM>
			<DIMM number="3">
				<Size>4.0GB</Size>
			</DIMM>
			<DIMM number="4">
				<Size>4.0GB</Size>
			</DIMM>
		</DIMMs>

		<!--
			This is where this the disk files are defined.  The type determines
			whether the device is read-only or read-write.
		-->
		<Disks>
			<Disk number="1">
				<Type>Disk</Type>
				<Name>RZ02</Name>
				<Size>100.0GB</Size>
				<File>/cygwin/g/git/DECaxp/dat/RZ02-1.dsk</File>
			</Disk>
			<Disk number="2">
				<Type>CDROM</Type>
				<Name>RZCD02</Name>
				<Size>100.0GB</Size>
				<File>/cygwin/g/git/DECaxp/dat/RZCD02-1.dsk</File>
			</Disk>
		</Disks>

		<!--
			The console definition contains the information required to be able
			to have a telnet terminal connect to the emulator as the console.
		-->
		<Console>
			<Port>780</Port>
		</Console>

		<!--
			The network definition contains the adapter name and the MAC
			address to be assigned to it.
		-->
		<Network>
			<Name>es04</Name>
			<MAC>08-01-00-FF-FF-FF</MAC>
		</Network>

		<!--
			This is a place holder for Printer definitions.
		-->
		<Printers>
			<Printer number="1" />
		</Printers>

		<!--
			This is a place holder for Tape definitions.
		-->
		<Tapes>
			<Name number="1" />
		</Tapes>
	</System>
</DECaxp>